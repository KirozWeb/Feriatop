                                <td><%= mascota.ContrasenaUsuario%></td>
                                <td>
                                <form class="d-flex" action="./buscarmaquina"id="formulario" name="formulario" method="post">
                                  <input class="form-control me-2" id="RefMaquina" name="RefMaquina" type="search" placeholder="Search" aria-label="Search">
                                  <input type="hidden" id="IdUsuario" name="IdUsuario" value="<%= mascota.IdUsuario %>">
                                  <button class="btn btn-outline-success" type="submit">Search</button>

                                </form>
                              </td>
                            </tr>

                      <% }) %>
                    <% } %>

                </tbody>
              </table>

    </div>
