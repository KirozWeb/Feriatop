    <div class = "container">ejeseupelon

            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Referencia Maquina</th>
                    <th scope="col">Accion</th>
                  </tr>
                </thead>
                <tbody>




                    <% if (arrayMascotas.length > 0) { %>
                        <%  arrayMascotas.forEach(mascota => {%>
