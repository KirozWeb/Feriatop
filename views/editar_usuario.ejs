<%-include("template/cabecera.ejs", {tituloWeb: 'Pagina de inicio'}) %>

    <div class = "container">

            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Accion</th>
                  </tr>
                </thead>
                <tbody>
                    <% if (arrayMascotas.length > 0) { %>
                        <%  arrayMascotas.forEach(mascota => {%>
                            <tr>
                                <th scope="row"><%= mascota.IdUsuario %> </th>
                                <td><%= mascota.ContrasenaUsuario%></td>
                                <td><%= mascota.NombreUsuario%></td>
                                <td>@mdo</td>
                            </tr>
                            <div class="container">
                                <div class="abs-center">
                                <div class="p-3 mb-2 bg-dark text-white">
                            <form class="border p-3 form" action="./updateusuario" id="formulario" name="formulario" method="post">

                                <input  type="hidden" id="IdUsuario" name="IdUsuario" value="<%= mascota.IdUsuario%>">
                                <label for="contrasena">Contrase√±a</label>
                                <br>
                                <label for="nombreusuario">Nombre usuario</label>
                                <br>
                                <input  type="text" id="NombreUsuario" name="NombreUsuario" value="<%= mascota.NombreUsuario%>">
                                <br>
                                <br>
                                <input  type="text" id="ContrasenaUsuario" name="ContrasenaUsuario" value="<%= mascota.ContrasenaUsuario%>">
                                <br>
                                <label for="perfilusuario">Perfil Usuario</label>
                                <br>
                                <input  type="text" value="<%= mascota.PerfilUsuario%>" readonly>
                                <br>
                                <select id="PerfilUsuario"name="PerfilUsuario">
                                    <option value="administrador">Administrador</option>
                                    <option value="operador">Operador</option>
                                    <option value="cooperador">Cooperador</option>
                                    <option value="fabricante">Fabricante</option>
                                    <option value="aprendiz">Aprendiz</option>
                                  </select>
                                <br>
                                <br>
                                <label for="telefonousuario">Telefono Usuario</label>
                                <br>
                                <input type="text" id="TelefonoUsuario" name="TelefonoUsuario" value="<%= mascota.TelefonoUsuario%>">
                                <br>
                                <label for="correousuario">Correo Usuario</label>
                                <br>
                                <input type="email" id="CorreoUsuario" name="CorreoUsuario" value="<%= mascota.CorreoUsuario%>">
                                <br>
                                <label for="paisusuario">Pais Usuario</label>
                                <br>
                                <input type="text" id="PaisUsuario" name="PaisUsuario"value="<%= mascota.PaisUsuario%>">
                                <br>
                                <br>
                                <input type="submit" id="enviar" value="Guardar registros" class="btn btn-outline-success">
                            </form>
                            </div>
                            </div>
                            </div>
                      <% }) %>
                    <% } %>

                </tbody>
              </table>

    </div>

<%-include("template/footer.ejs") %>